@model user
@{
    Layout = "_AdminDashboardLayout";
}


<!-- boooooooooooooooooooooooooooooooooooooooooooooooooody -->
<form method="post" asp-controller="Admin" asp-action="edit_user" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">
                
                    <h2 class="mt-0 header-title">Edit User</h2>
                    <br>

                    <div class="form-group row">
                        <label for="example-text-input" class="col-sm-2 col-form-label">User Name</label>
                        <div class="col-sm-10">
                            <input hidden readonly asp-for="user_id" />
                            <input class="form-control" type="text" value="@Model.user_name" asp-for="user_name">
                            <span asp-validation-for="user_name"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="example-tel-input" class="col-sm-2 col-form-label">User Email</label>
                        <div class="col-sm-10">
                            <input class="form-control" readonly type="email" value="@Model.user_email" asp-for="user_email" >
                            <span asp-validation-for="user_email"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">Phone</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="Text" value="@Model.user_phone" asp-for="user_phone" >
                            <span asp-validation-for="user_phone"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="Text" value="@Model.user_password" asp-for="user_password">
                            <span asp-validation-for="user_password"></span>
                        </div>
                    </div>
                                                
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="gender">
                                <option value="@Model.gender">@Model.gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="gender"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">Age</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" value="@Model.user_age" asp-for="user_age">
                            <span asp-validation-for="user_age"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-number-input" class="col-sm-2 col-form-label">User Role</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="Text" value="@Model.user_role" asp-for="user_role">

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-time-input" class="col-sm-2 col-form-label">user image</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="hidden" asp-for="user_image" value="@Model.user_image">
                            <span asp-validation-for="user_image"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-3">
            
                            <!-- Simple card -->
                            <div class="card m-b-30">
                                <div class="card-body">
                                     <input class="form-control" type="file" asp-for="user_image">
                                </div>
                            </div>
            
                     </div><!-- end col -->


                    <div class="col-xs-6">
                        <div class="submit-holder">
                            <button type="submit" name="submit">Edit User</button>
                        </div>
                    </div>
                                                
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->      

</form>


